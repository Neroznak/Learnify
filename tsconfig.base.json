{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@synapse/auth": ["libs/auth/src/index.ts"]
    }
  },
  "include": ["apps/**/*", "libs/**/*"],
  "exclude": ["node_modules"]
}
